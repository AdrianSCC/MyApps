<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlItemJuegos"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeightLarge"
    android:orientation="vertical">



    <ImageView
        android:id="@+id/ivImagenJuego"
        android:layout_width="72dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_my_app" />

    <TextView
        android:id="@+id/tvTituloJuego"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/ivImagenJuego"
        android:layout_centerVertical="true"
        android:layout_marginLeft="17dp"
        android:layout_marginEnd="-227dp"
        android:layout_toRightOf="@id/ivImagenJuego"
        android:text="Titulo" />

    <TextView
        android:id="@+id/tvPlataforma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/tvTituloJuego"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="-86dp"
        android:layout_marginRight="-68dp"
        android:layout_marginBottom="49dp"
        android:maxLines="2"
        android:singleLine="false"
        android:text="Plataforma"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/tvPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/tvTituloJuego"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="-86dp"
        android:layout_marginRight="-68dp"
        android:layout_marginBottom="33dp"
        android:singleLine="false"
        android:text="Precio"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/tvFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/tvTituloJuego"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="-86dp"
        android:layout_marginRight="-68dp"
        android:layout_marginBottom="17dp"
        android:singleLine="false"
        android:text="Fecha"
        android:textSize="8sp" />

</RelativeLayout>