<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlItem"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeightLarge"
    android:orientation="vertical">



    <ImageView
        android:id="@+id/ivImagenNoticia"
        android:layout_width="72dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_my_app" />

    <TextView
        android:id="@+id/tvTituloNoticia"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/ivImagenNoticia"
        android:layout_centerVertical="true"
        android:layout_marginLeft="17dp"
        android:layout_marginEnd="-227dp"
        android:layout_toRightOf="@id/ivImagenNoticia"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvFechaContenidoJuego"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/tvTituloNoticia"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="-87dp"
        android:layout_marginRight="-68dp"
        android:layout_marginBottom="33dp"
        android:maxLines="2"
        android:singleLine="false"
        android:text="TextView"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/tvHora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/tvTituloNoticia"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="-87dp"
        android:layout_marginRight="-68dp"
        android:layout_marginBottom="17dp"
        android:singleLine="false"
        android:text="TextView"
        android:textSize="8sp" />



</RelativeLayout>